<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="login-panel panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					My application - Forgot password
				</h3>
			</div>
			<div class="panel-body">
				<%= bootstrap_form_tag(url: session_reset_password_path, method: :put, data: {toggle:"validator"} ) do |f| %>
					<fieldset>
						<div class="form-group">
							<%= f.email_field '', autofocus: true, class:"form-control", id:"email", name:"email", placeholder:"Email", required: "true" %>
						</div>
						<div class=text-right>
							<%= f.submit 'Send Email', class:"btn btn-success" %>
						</div>
					</fieldset>
				<% end %>

			</div>
		</div>
	</div>
</div>
